{
  "name": "web-scraper-v2",
  "version": "2.0.0",
  "description": "Universal web scraper with deterministic CSV outputs and WooCommerce compatibility",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@web-scraper/backend",
    "dev:frontend": "npm run dev --workspace=@web-scraper/frontend",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces",
    "install:all": "npm install",
    "docker:build": "docker-compose -f configs/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f configs/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f configs/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f configs/docker/docker-compose.yml logs -f",
    "docker:dev": "docker-compose -f configs/docker/docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f configs/docker/docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f configs/docker/docker-compose.dev.yml logs -f"
  },
  "keywords": [
    "web-scraper",
    "ecommerce",
    "woocommerce",
    "csv",
    "universal"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
