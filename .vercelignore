# Exclude frontend (not needed for backend deployment)
apps/frontend/

# Exclude configuration files not needed in production
configs/
scripts/
docs/

# Exclude development files
*.md
.git/
.gitignore

# Exclude test files
**/*.test.ts
**/*.spec.ts

